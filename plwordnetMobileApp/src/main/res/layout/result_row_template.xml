<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="2dp">
    <TextView
        android:id="@+id/word_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@id/part_of_speech"
        android:text="result_word"
        android:textSize="18dp"
        android:textColor="@color/colorMainText"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/word_meaning_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/word_name"
        android:layout_marginTop="4dp"
        android:text=""
        android:textColor="@color/colorMainText"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/flag_unknown" />
    <TextView
        android:id="@+id/part_of_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/language_icon"
        android:layout_marginLeft="14dp"
        android:text="part_of_speech"
        android:textSize="16dp"
        android:textColor="@color/colorMainText"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/short_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/word_name"
        android:layout_marginLeft="5dp"
        android:text="short description of the word"
        android:textSize="16dp"
        android:textColor="@color/colorDescriptionText"
        android:textStyle="italic"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/short_description"
        android:background="@color/colorMainSeparator"/>
</RelativeLayout>