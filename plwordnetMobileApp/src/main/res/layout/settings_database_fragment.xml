<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/offline_mode"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <ImageView
                android:id="@+id/offline_mode_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/offline_icon"
                android:tint="@color/colorSettingsIcon"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        <TextView
                android:id="@+id/offline_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/offline_mode_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/offline_mode"
                android:textColor="@color/colorMainText"
                android:textSize="20dp"/>
        <Switch
                android:id="@+id/offline_mode_switch"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        <View
                android:id="@+id/offline_mode_separator"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@color/colorSeparator"
        />
    </RelativeLayout>
</LinearLayout>